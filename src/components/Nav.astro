---
import * as CONFIG from '../config.json';

const {pathname} = Astro.url;
---
<nav>
    <ul>
        {
            CONFIG.navigation.map(i => (
                <li class="inline-block">
                    <a href={i.link} class={`block uppercase text-sm px-12 py-6 font-headings ${i.link === pathname ? 'bg-white' : 'text-white hover:bg-white/10 transition-all'}`}>
                        {i.text}
                    </a>
                </li>
            ))
        }
    </ul>
</nav>